<mahapps:MetroWindow
    x:Class="Wabbajack.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ic="clr-namespace:FluentIcons.Wpf;assembly=FluentIcons.Wpf"
    xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Wabbajack"
    xmlns:mahapps="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:Wabbajack.Views"
    Title="Wabbajack UNLOCKED v3.4"
    Width="1441"
    Height="720"
    MinWidth="1100"
    MinHeight="500"
    d:DataContext="{d:DesignInstance Type=local:MainWindowVM}"
    Closing="Window_Closing"
    RenderOptions.BitmapScalingMode="HighQuality"
    ResizeMode="CanResize"
    ShowCloseButton="False"
    ShowMaxRestoreButton="False"
    ShowMinButton="False"
    ShowTitleBar="False"
    Style="{StaticResource {x:Type Window}}"
    TitleBarHeight="54"
    UseLayoutRounding="True"
    WindowTitleBrush="{StaticResource BackgroundBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="54" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid
            x:Name="FloatingWindow"
            Grid.Row="0"
            Grid.RowSpan="2"
            Panel.ZIndex="2">
            <Rectangle
                x:Name="FloatingWindowBackground"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Fill="{StaticResource BackgroundBrush}"
                Opacity="0.75" />
            <Border
                Margin="32"
                Background="{StaticResource ComplementaryBackgroundBrush}"
                CornerRadius="8">
                <ContentPresenter
                    x:Name="FloatingContentPresenter"
                    Margin="16"
                    VerticalAlignment="Stretch"
                    Content="{Binding ActiveFloatingPane}">
                    <ContentPresenter.Resources>
                        <DataTemplate DataType="{x:Type local:ModListDetailsVM}">
                            <local:ModListDetailsView ViewModel="{Binding}" />
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type local:BrowserWindowViewModel}">
                            <local:BrowserWindow ViewModel="{Binding}" />
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type local:FileUploadVM}">
                            <local:FileUploadView ViewModel="{Binding}" />
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type local:MegaLoginVM}">
                            <local:MegaLoginView ViewModel="{Binding}" />
                        </DataTemplate>
                    </ContentPresenter.Resources>
                </ContentPresenter>
            </Border>
        </Grid>
        <Grid
            x:Name="TitleBar"
            Grid.Row="0"
            Panel.ZIndex="1"
            Background="{StaticResource BackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Border Margin="16,0,8,0" BorderThickness="0">
                <Image
                    Grid.Column="0"
                    Width="18"
                    Height="18"
                    Source="{StaticResource WabbajackLegacyLogo}" />
            </Border>
            <TextBlock
                Name="AppName"
                Grid.Column="1"
                VerticalAlignment="Center"
                FontSize="13" />
            <DockPanel
                x:Name="WizardSteps"
                Grid.Column="0"
                Grid.ColumnSpan="7"
                Margin="0,10,0,10"
                HorizontalAlignment="Center">
                <Border
                    x:Name="ConfigurationBorderMask2"
                    Margin="12,1,0,1"
                    Background="White"
                    BorderThickness="0"
                    CornerRadius="8">
                    <Grid Margin="-1">
                        <Border
                            x:Name="ConfigurationBorderMask"
                            Margin="1"
                            Background="White"
                            CornerRadius="8" />
                        <Grid>
                            <Grid.OpacityMask>
                                <VisualBrush Visual="{Binding ElementName=ConfigurationBorderMask}" />
                            </Grid.OpacityMask>
                            <mahapps:MetroProgressBar
                                x:Name="WizardConfiguration"
                                Width="{Binding ElementName=ConfigurationText, Path=ActualWidth}"
                                Background="{StaticResource ComplementaryBackgroundBrush}"
                                BorderThickness="0"
                                Foreground="{StaticResource ComplementaryPrimary16Brush}"
                                Maximum="1"
                                Value="1" />
                            <TextBlock
                                x:Name="ConfigurationText"
                                Padding="12,0,12,0"
                                VerticalAlignment="Center" />
                        </Grid>
                    </Grid>
                </Border>
                <Border
                    x:Name="BorderMask2"
                    Margin="12,1,0,1"
                    Background="White"
                    BorderThickness="0"
                    CornerRadius="8">
                    <Grid Margin="-1">
                        <Border
                            x:Name="BorderMask"
                            Margin="1"
                            Background="White"
                            CornerRadius="8" />
                        <Grid>
                            <Grid.OpacityMask>
                                <VisualBrush Visual="{Binding ElementName=BorderMask}" />
                            </Grid.OpacityMask>
                            <mahapps:MetroProgressBar
                                x:Name="WizardProgress"
                                Width="{Binding ElementName=ProgressText, Path=ActualWidth}"
                                Background="{StaticResource ComplementaryBackgroundBrush}"
                                BorderThickness="0"
                                Foreground="{StaticResource ComplementaryPrimary16Brush}"
                                Maximum="1" />
                            <TextBlock
                                x:Name="ProgressText"
                                Padding="12,0,12,0"
                                VerticalAlignment="Center" />
                            <TextBlock
                                x:Name="ProgressPercentage"
                                Padding="0,0,12,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center" />
                        </Grid>
                    </Grid>
                </Border>
            </DockPanel>
            <Grid Grid.Column="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button
                    Name="LoadLocalFileButton"
                    Grid.Column="0"
                    Margin="0,10,12,10"
                    Padding="12,0"
                    Background="{StaticResource BackgroundPrimary08Brush}"
                    Style="{StaticResource MainButtonStyleLessRounded}">
                    <DockPanel>
                        <TextBlock
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            FontSize="13"
                            Text="Install from disk" />
                        <ic:SymbolIcon
                            VerticalAlignment="Center"
                            FontSize="18"
                            Symbol="ArrowUpload" />
                    </DockPanel>
                </Button>
                <Button
                    Name="GetHelpButton"
                    Grid.Column="1"
                    Margin="0,10,12,10"
                    Padding="12,0"
                    Background="{StaticResource BackgroundPrimary08Brush}"
                    Style="{StaticResource MainButtonStyleLessRounded}">
                    <DockPanel>
                        <TextBlock
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            FontSize="13"
                            Text="Get Help" />
                        <ic:SymbolIcon
                            VerticalAlignment="Center"
                            FontSize="18"
                            Symbol="QuestionCircle" />
                    </DockPanel>
                </Button>
            </Grid>
            <Button
                Name="MinimizeButton"
                Grid.Column="4"
                Padding="12"
                Style="{StaticResource IconBareButtonStyle}">
                <ic:SymbolIcon FontSize="18" Symbol="Subtract" />
            </Button>
            <Button
                Name="MaximizeButton"
                Grid.Column="5"
                Padding="12"
                Style="{StaticResource IconBareButtonStyle}">
                <ic:SymbolIcon FontSize="18" Symbol="Maximize" />
            </Button>
            <Button
                Name="CloseButton"
                Grid.Column="6"
                Padding="12"
                Style="{StaticResource IconBareButtonStyle}">
                <ic:SymbolIcon FontSize="18" Symbol="Dismiss" />
            </Button>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="NavigationColumn" Width="115" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <local:NavigationView
                Grid.Column="0"
                Panel.ZIndex="1"
                ViewModel="{Binding NavigationVM}" />
            <Border
                x:Name="MainContent"
                Grid.Column="1"
                Margin="0"
                Background="{StaticResource ComplementaryBackgroundBrush}"
                CornerRadius="8">
                <Grid>
                    <Viewbox Panel.ZIndex="0" Stretch="Uniform">
                        <Image
                            Width="{Binding ActualWidth, ElementName=MainContent}"
                            Height="{Binding ActualHeight, ElementName=MainContent}"
                            HorizontalAlignment="Right"
                            RenderTransformOrigin="0.5, 0.5"
                            Source="{StaticResource WabbajackLogoBackground}">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="1.7" ScaleY="1.7" />
                                    <RotateTransform Angle="15" />
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Viewbox>
                    <ContentPresenter
                        Margin="16"
                        VerticalAlignment="Stretch"
                        Content="{Binding ActivePane}">
                        <ContentPresenter.Resources>
                            <DataTemplate DataType="{x:Type local:HomeVM}">
                                <local:HomeView ViewModel="{Binding}" />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type local:ModListGalleryVM}">
                                <local:ModListGalleryView ViewModel="{Binding}" />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type local:CompilerHomeVM}">
                                <local:CompilerHomeView ViewModel="{Binding}" />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type local:CompilerDetailsVM}">
                                <local:CompilerDetailsView ViewModel="{Binding}" />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type local:CompilerFileManagerVM}">
                                <local:CompilerFileManagerView ViewModel="{Binding}" />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type local:CompilerMainVM}">
                                <local:CompilerMainView ViewModel="{Binding}" />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type local:InstallationVM}">
                                <local:InstallationView ViewModel="{Binding}" />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type local:WebBrowserVM}">
                                <local:WebBrowserView />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type local:SettingsVM}">
                                <local:SettingsView ViewModel="{Binding}" />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type local:ModListDetailsVM}">
                                <local:ModListDetailsView ViewModel="{Binding}" />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type local:InfoVM}">
                                <local:InfoView ViewModel="{Binding}" />
                            </DataTemplate>
                        </ContentPresenter.Resources>
                    </ContentPresenter>
                </Grid>
            </Border>
        </Grid>
    </Grid>
    <mahapps:MetroWindow.RightWindowCommands>
        <mahapps:WindowCommands>
            <mahapps:WindowCommands.Resources>
                <Style BasedOn="{StaticResource IconBareButtonStyle}" TargetType="Button" />
            </mahapps:WindowCommands.Resources>
            <Button
                Grid.Column="1"
                Command="{Binding MinimizeCommand}"
                Style="{StaticResource IconBareButtonStyle}">
                <ic:SymbolIcon FontSize="17" Symbol="Subtract" />
            </Button>
            <Button
                Grid.Column="1"
                Command="{Binding MaximizeCommand}"
                Style="{StaticResource IconBareButtonStyle}">
                <ic:SymbolIcon FontSize="17" Symbol="Maximize" />
            </Button>
            <Button
                Grid.Column="1"
                Command="{Binding CloseCommand}"
                Style="{StaticResource IconBareButtonStyle}">
                <ic:SymbolIcon FontSize="17" Symbol="ArrowExit" />
            </Button>
        </mahapps:WindowCommands>
    </mahapps:MetroWindow.RightWindowCommands>
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="TaskbarItemInfoControl" />
    </Window.TaskbarItemInfo>
</mahapps:MetroWindow>